generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  avatar        String?

  password      String?
  googleId      String?  @unique

  plan          Plan     @default(FREE)

  monthlyQuota  Int      @default(100)
  usedThisMonth Int      @default(0)
  totalUsage    Int      @default(0)

  quotaResetAt  DateTime @default(now())

  stripeCustomerId     String? @unique
  stripeSubscriptionId String? @unique

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  emailVerified Boolean @default(false)
  isActive      Boolean @default(true)
  deletedAt     DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastLoginAt   DateTime?

  jobs     Job[]
  leads    Lead[]
  sessions Session[]
  webhooks Webhook[]
  apiKeys  ApiKey[]

  @@index([email])
  @@index([googleId])
  @@index([plan, isActive])
}


model Session {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  accessToken  String?  @db.Text
  refreshToken String?  @db.Text
  expiresAt    DateTime
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionToken])
}

model Job {
  id          String    @id @default(cuid())
  userId      String
  name        String?   // User can name their job (optional)
  status      JobStatus @default(QUEUED)
  urls        String[]
  totalUrls   Int
  completed   Int       @default(0)
  failed      Int       @default(0)
  results     Json?
  errors      Json?     // Store individual URL errors
  source      JobSource @default(DASHBOARD) // Dashboard vs API
  priority    JobPriority @default(NORMAL)
  createdAt   DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  leads       Lead[]
  
  @@index([userId, status])
  @@index([status, priority])
  @@index([createdAt])
  @@index([userId, createdAt])
}

model Lead {
  id           String   @id @default(cuid())
  userId       String
  jobId        String
  website      String
  name         String?
  description  String?  @db.Text
  email        String?
  emailQuality EmailQuality? // HIGH, MEDIUM, LOW
  phone        String?
  
  businessType String?
  industry     String?
  leadScore    Int      @default(0)
  confidence   Int      @default(0)
  priority     LeadPriority?  
  logo         String?
  screenshot   String?  // Path to screenshot if taken
  
  keywords     String?
  
  pages        Json?    // { pricing, about, contact, blog, careers, docs }
  socials      Json?    // { twitter, linkedin, facebook, instagram, youtube, github }
  technologies Json?    // Array of detected tech
  seo          Json?    // SEO metrics
  performance  Json?    // Performance metrics
  isEnriched   Boolean  @default(false)
  enrichedAt   DateTime?
  isFavorite   Boolean  @default(false)
  notes        String?  @db.Text
  tags         String[] // User-added tags
  exportedAt   DateTime?
  exportCount  Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  job          Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  @@index([userId, businessType])
  @@index([userId, leadScore])
  @@index([leadScore, confidence])
  @@index([priority])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([jobId])
  @@index([isFavorite])
}

model ApiKey {
  id          String   @id @default(cuid())

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  keyHash     String
  keyPrefix   String

  name        String
  permissions Json?

  rateLimit   Int      @default(100)

  isActive    Boolean  @default(true)
  usageCount  Int      @default(0)

  lastUsedAt  DateTime?

  ipWhitelist String[]

  expiresAt   DateTime?
  revokedAt   DateTime?

  createdAt   DateTime @default(now())

  @@index([keyPrefix])
  @@index([userId, isActive])
}


model Webhook {
  id          String   @id @default(cuid())
  userId      String
  
  url         String
  events      String[] // ["job.completed", "job.failed"]
  secret      String   // For signature verification
  
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  lastTriggeredAt DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isActive])
}

model UsageLog {
  id          String   @id @default(cuid())
  userId      String
  
  action      String   // "scrape", "export", "api_call"
  credits     Int      // Credits consumed
  metadata    Json?    // Additional info
  
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
  @@index([action])
}

enum Plan {
  FREE
  PRO
  BUSINESS
  ENTERPRISE
}

enum JobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum JobSource {
  DASHBOARD
  API
  WEBHOOK
  CRON
}

enum JobPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum EmailQuality {
  HIGH      // From mailto or contact page
  MEDIUM    // From contact section
  LOW       // From footer/body
}

enum LeadPriority {
  HIGH
  MEDIUM
  LOW
}